[init]
  defaultBranch = main

[core]
  excludesfile = {{ .chezmoi.homeDir }}/.config/git/.gitignore
  pager = less -iXFR

[color]
  ui = true

[user]
  email = tyriis@users.noreply.github.com
  name = Nils MÃ¼ller
  {{- if eq .chezmoi.hostname "red" }}
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAICSzX7EmbKCs4+wXIE0ksCrGtOPo8dR7WcsWPydJkZn
  {{- else if eq .chezmoi.hostname "strg" }}
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAICSzX7EmbKCs4+wXIE0ksCrGtOPo8dR7WcsWPydJkZnF
  {{- end }}

[alias]
  co = checkout
  st = status
  hist = "log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short"
  logo = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ (%cn)" --decorate
  undo = reset HEAD~
  yolo = !git add -A && git commit -m \"$(curl -s http://whatthecommit.com/index.txt)\"

[commit]
  # show diff in commit editor window
  verbose = true
  gpgsign = true

[push]
  # commit resolveable tags on commit
  followTags = true
  # do not show The current branch ... has no upstream branch.
  default = current

[pull]
  rebase = false

[gpg]
  format = ssh

[gpg "ssh"]
  allowedSignersFile = {{ .chezmoi.homeDir }}/.ssh/authorized_signatures

[includeIf "gitdir:{{ .chezmoi.homeDir }}/projects/strg/"]
  path = {{ .chezmoi.homeDir }}/.config/git/config_strg

[includeIf "gitdir:{{ .chezmoi.homeDir }}/projects/tyriis/"]
  path = {{ .chezmoi.homeDir }}/.config/git/config_tyriis

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[credential "https://github.com"]
  helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
  helper = !/usr/bin/gh auth git-credential
